connectwifi(){
    ssid="STRANGE"
    password="12345678"
    echo "reconnecting to $ssid..."
#    nmcli radio wifi off
#    nmcli radio wifi on
    echo "enter pass:"
    nmcli device wifi connect $ssid password $password 
}

resetnetworking(){
    nmcli networking off && nmcli networking on
}


