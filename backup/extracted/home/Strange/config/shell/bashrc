#################################################################################
# Minimal prompt: folder + branch
parse_git_branch() {
  git rev-parse --is-inside-work-tree &>/dev/null || return
  echo " [$(git rev-parse --abbrev-ref HEAD 2>/dev/null)]"
}
PS1='\[\e[0;34m\]\W\[\e[0;35m\]$(parse_git_branch)\[\e[0m\] \$ '
