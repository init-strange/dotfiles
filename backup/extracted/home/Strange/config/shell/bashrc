##########################################################################################################

chmod_shell_scripts() {
    dir="$HOME/.config/shell/scripts/"
    if [[ -d "$dir" ]]; then
        find "$dir" -type f -name "*.sh" -exec chmod +x {} +
        echo "Made all .sh scripts in $dir executable."
    else
        echo "Directory not found: $dir"
    fi
}
chmod_sway_scripts() {
    dir="$HOME/.config/sway/scripts"
    if [[ -d "$dir" ]]; then
        find "$dir" -type f -name "*.sh" -exec chmod +x {} +
        echo "Made all .sh scripts in $dir executable."
    else
        echo "Directory not found: $dir"
    fi
}
